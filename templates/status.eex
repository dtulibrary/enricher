<!DOCTYPE html>
<html>
  <head>
    <title>Harvest Status</title>
    <%= EEx.eval_file("templates/common_style.html") %>
  </head>
  <body>
    <h1>Harvest Status</h1>
    <table>
      <tr>
        <td>Endpoint</td>
        <td><%= status.endpoint %></td>
      </tr>
      <tr>
        <td>In Progress</td>
        <td><%= status.in_progress %></td>
      </tr>
      <tr>
        <td>Mode</td>
        <td><%= status.mode %></td>
      </tr>
       <tr>
        <td>Start time</td>
        <td><%= Enricher.Status.format_time(status.start_time) %></td>
      </tr>
      <tr>
        <td>End time</td>
        <td><%= Enricher.Status.format_time(status.end_time) %></td>
      </tr>
      <tr>
        <td>Documents Processed</td>
        <td><%= status.docs_processed %></td>
      </tr>
      <tr>
        <td>Batch size</td>
        <td><%= status.batch_size %></td>
      </tr>
      <tr>
        <td>Docs per second</td>
        <td><%= Enricher.Status.throughput(status) %></td>
      </tr>
      <tr>
        <td>Commit buffer size</td>
        <td><%= commit_buffer %></td>
      </tr>
     <tr>
        <td>Last message</td>
        <td><%= message %></td>
      </tr>
    </table>
    <a href="log">See log</a>
  </body>
</html>
